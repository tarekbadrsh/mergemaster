{
  "name": "mergemaster",
  "displayName": "MergeMaster",
  "description": "Powerful multi-file merger for combining and sharing code snippets",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mergemaster.merge",
        "title": "Merge Selected Files",
        "icon": "$(files)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mergemaster.merge",
          "group": "2_workspace",
          "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsFolder"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mergemaster",
          "title": "MergeMaster",
          "icon": "resources/merge-icon.svg"
        }
      ]
    },
    "views": {
      "mergemaster": [
        {
          "id": "mergemaster.filesView",
          "name": "Files to Merge"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}